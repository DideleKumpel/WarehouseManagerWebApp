@page
@model WareHouseManagerWebApp.Pages.Tasks.taskManagerModel
@{
    ViewData["Title"] = "Task Manager Panel";
}


<form method="post"> 
    <div>
        <label asp-for="TaskTypeValue">Select task </label>
        <select asp-for="TaskTypeValue" class="form-control">
            <option value="load">LOAD</option>
            <option value="unload">UNLOAD</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="RampSelect.SelectedRampId">Select ramp</label>
        <select asp-for="RampSelect.SelectedRampId" asp-items="Model.RampSelect.Ramps" class="form-control">
        </select>
    </div>
    <div class="form-group">
        <label asp-for="ProductrSelect.SelectedItemBarcode">Select ramp</label>
        <select asp-for="ProductrSelect.SelectedItemBarcode" asp-items="Model.ProductrSelect.Products" class="form-control">
        </select>
    </div>
    <button type="submit">Add</button>

    <div asp-validation-summary="All"></div>
</form>

<table>
    <thead>
        <tr>
            <th>Type</th>
            <th>Barcode</th>
            <th>Ramp</th>
            <th>Shelf</th>
            <th>Row</th>
            <th>Level</th>
            <th>Upload date</th>
            <th>Status</th>
            <th>Assigned employee</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Tasks)
        {
            <tr>
                <td>@product.Type</td>
                <td>@product.ProductBarcode</td>
                <td>@product.RampName</td>
                <td>@product.Location.Shelf</td>
                <td>@product.Location.Row</td>
                <td>@product.Location.Level</td>
                <td>@product.UploadDate</td>
                <td>@product.Status</td>
                <td>
                    @if (@product.EmployeeId != null)
                    {
                        @($"{product.EmployeeId} {product.Employee.Name} {product.Employee.Lastname}")
                    }
                    else
                    {
                        <text>none</text>
                    }
                </td>

                <td>
                    <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>